{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore"
      ]
    ],
    "scope-enum": [
      2,
      "always",
      [
        "mobile",
        "core",
        "ai-client",
        "supabase",
        "mcp",
        "docs",
        "deps"
      ]
    ],
    "scope-empty": [1, "never"],
    "subject-case": [2, "always", "lower-case"],
    "header-max-length": [2, "always", 100]
  }
}
